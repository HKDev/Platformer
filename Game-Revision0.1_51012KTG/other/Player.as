package other {	import org.flixel.*;		import org.flixel.plugin.photonstorm.FlxControl;	import org.flixel.plugin.photonstorm.FlxControlHandler;	public class Player extends FlxSprite 	{		// -------------------------------------------------------------------- //		[Embed(source='../assets/player.png')] private var playerClass:Class;			protected var healthMax = 100;					// -------------------------------------------------------------------- //		public function Player(X:Number, Y:Number, ...args):void		{			super(X,Y);						width = 15;			height = 18;			health = healthMax;			loadGraphic(playerClass, true,true, width,height, true);			addAnimation("normal", [0,1,0,2],10, true);			addAnimation("stopped", [0],0, false);			// add keyboard controls and player physics using photonstorm FlxControl			addControls();						// player sprite direction			facing = RIGHT;		}		private function addControls():void 		{ 			// load controls plugin			if(FlxG.getPlugin(FlxControl) == null)				FlxG.addPlugin(new FlxControl);			// create a new controller						FlxControl.create(this, FlxControlHandler.MOVEMENT_ACCELERATES, FlxControlHandler.STOPPING_DECELERATES, 1, true, false);			// disable cursor control			FlxControl.player1.setCursorControl(false, false, true, true);			// set jump control to spacebar			FlxControl.player1.setJumpButton("SPACE", FlxControlHandler.KEYMODE_PRESSED, 200, FlxObject.FLOOR, 250, 200);			// set speed 			FlxControl.player1.setMovementSpeed(400, 0, 100, 200, 400, 0);			// set gravity downward of 400px/sec			FlxControl.player1.setGravity(0,400);		}		// -------------------------------------------------------------------- //		override public function update():void		{			checkKeyboard();		}		override public function kill():void		{		}		// -------------------------------------------------------------------- //		private function checkKeyboard():void 		{		}	}//class}//package