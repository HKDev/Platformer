package core {		import flash.display.Sprite;	import flash.events.Event;	import core.Game;	[SWF(width="640", height="480", backgroundColor="#000000")]	public class DocumentClass extends Sprite {		public function DocumentClass() {			if(stage) initialize();			else addEventListener(Event.ADDED_TO_STAGE, initialize);		}		private function initialize(e:Event = null):void {			removeEventListener(Event.ADDED_TO_STAGE, initialize);			var game:Game = new Game;			addChild(game);		}	}//class}//package