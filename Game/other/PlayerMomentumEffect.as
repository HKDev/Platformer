package other{		// assets	import core.Assets;	import core.State;		import org.flixel.FlxSprite;	import org.flixel.FlxGroup;	import flash.utils.Timer;	import flash.events.TimerEvent;	public class PlayerMomentumEffect extends FlxSprite	{		private var _player:FlxSprite;			public var cloneGrp:FlxGroup;			public var fadeSpeed:Number;		public var cloneDelay:int;		public var cloneQty:int;				public function PlayerMomentumEffect()		{			super(0,0,Assets.nullClass); // fix this.. right now where we arent assigning a class for the sprite image it is putting a default flixel class image up. Set super(x,y) to positive to see.			_player = State.player as FlxSprite;			cloneGrp = new FlxGroup();				}		public function added(bool:Boolean):void { 			if(bool) 				State.layer1.add(cloneGrp);			else 				State.layer1.remove(cloneGrp);		}		public function create(fadeSpeed:Number, cloneDelay:Number, cloneQty:int):void  {			this.fadeSpeed = fadeSpeed;			this.cloneDelay = cloneDelay;			this.cloneQty = cloneQty;			var cloneTimer:Timer = new Timer(cloneDelay, cloneQty);			cloneTimer.addEventListener(TimerEvent.TIMER,clone,false,0,true);			cloneTimer.start();			}				private function clone(e:TimerEvent):void { 			var playerClone:FlxSprite = new FlxSprite(0,0,null);			playerClone.pixels = _player.framePixels;			playerClone.x = _player.x;			playerClone.y = _player.y;						cloneGrp.add(playerClone);		}					override public function update():void		{			var cloneSprite:FlxSprite = cloneGrp.getFirstAlive() as FlxSprite;			if(cloneSprite != null) { 				if(cloneSprite.alpha > 0) cloneSprite.alpha -= fadeSpeed;								else {					cloneSprite.kill();					cloneGrp.remove(cloneSprite);					// lets reuse the copies after the first creation.. havent added but will be adding that. 				}						}			if(this.finished)			{				this.kill();				trace("Killed Momentum Effect!");			}			super.update();		}	}}