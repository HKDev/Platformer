package core {		import flash.display.Sprite;	import flash.events.Event;	import core.Game;	import org.flixel.system.FlxPreloader;	[SWF(width="550", height="400", backgroundColor="#000000")]			public class DocumentClass extends Sprite {		protected static var singleton:DocumentClass;		public function DocumentClass() {			singleton = this;			if(stage) initialize();			else addEventListener(Event.ADDED_TO_STAGE, initialize);		}		private function initialize(e:Event = null):void {			removeEventListener(Event.ADDED_TO_STAGE, initialize);			var game:Game = new Game;			addChild(game);		}		public static function get self():DocumentClass { 			return singleton;		}	}//class}//package